const int N = 2e5 + 5;

vi par(N), size(N, 0);

void init(int n){
	frw(i, 1, n + 1){	
		par[i] = i;
		size[i] = 1;
	}
}

int find(int x){
	return par[x] = (par[x] == x) ? x : find(par[x]);
}

void merge(int x, int y){
	x = find(x);
	y = find(y);
	if(x == y)	return;
	if(size[x] < size[y])	swap(x, y);
	par[y] = x;
	size[x] += size[y];
}
