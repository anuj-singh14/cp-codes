//counts no of occurences of P in T in O(n)

ll ans = 0 ; 

void kmp(const string &T, const string &P) {
    if (P.empty()) return ;
    vll pi(sz(P), 0);
    for (ll i = 1, k = 0 ; i < sz(P) ; ++i) {
        while (k && P[k] != P[i]) k = pi[k - 1];
        if (P[k] == P[i]) ++k;
        pi[i] = k;
    }
    for (ll i = 0, k = 0; i < sz(T) ; ++i) {
        while (k && P[k] != T[i]) k = pi[k - 1];
        if (P[k] == T[i]) ++k;
        if (k == sz(P)) ++ans ;
    }
}
